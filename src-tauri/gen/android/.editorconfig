# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

[*.{kt,kts}]
ktlint_standard_no-wildcard-imports = disabled # 禁止通配符导入规则，因为自动生成代码无法改变