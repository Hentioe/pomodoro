{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tauri-pomodoro",
  "version": "0.1.0",
  "identifier": "com.hentioe.tauri-pomodoro",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "tauri-pomodoro",
        "width": 398,
        "height": 629,
        "resizable": false,
        "alwaysOnTop": true,
        "transparent": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["sounds/*"]
  }
}
